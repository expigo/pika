{
  "name": "pika",
  "version": "0.1.8",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "test": "bun test",
    "test:load": "k6 run tests/load/load-test.js",
    "test:load:big": "k6 run --env SCENARIO=big tests/load/load-test.js",
    "format": "biome format --write packages/cloud packages/web packages/shared",
    "lint": "biome check packages/cloud packages/web packages/shared",
    "check": "biome check --write packages/cloud packages/web packages/shared",
    "bump": "bun scripts/bump-version.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0"
  }
}
