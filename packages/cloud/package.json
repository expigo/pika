{
  "name": "@pika/cloud",
  "version": "0.2.7",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun run db:migrate && NODE_ENV=development bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "bun run db:migrate && bun run src/index.ts",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:baseline": "bun run scripts/db-baseline.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@pika/shared": "workspace:*",
    "@sentry/bun": "^10.36.0",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "hono-rate-limiter": "^0.5.3",
    "postgres": "^3.4.0",
    "web-push": "^3.6.7",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/web-push": "^3.6.4",
    "bun-types": "^1.2.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
