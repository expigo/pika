{
  "name": "@pika/cloud",
  "version": "0.1.4",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun run db:migrate && NODE_ENV=development bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "bun run db:migrate && bun run src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:baseline": "bun run scripts/db-baseline.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@pika/shared": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "hono-rate-limiter": "^0.5.3",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "bun-types": "^1.2.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
