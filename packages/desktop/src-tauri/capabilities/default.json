{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    {
      "identifier": "sql:allow-load",
      "allow": [
        {
          "name": "sqlite:pika.db"
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/api",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        }
      ]
    }
  ]
}