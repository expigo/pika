{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pika",
  "version": "0.1.4",
  "identifier": "com.pika.desktop",
  "build": {
    "beforeDevCommand": "bun run --bun vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run --bun vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pika!",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/api"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
